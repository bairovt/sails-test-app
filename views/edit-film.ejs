<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="/films/list">Films</a></li>
  <li class="breadcrumb-item active">Edit</li>
</ol>

<h1 class="display-5">Edit Film: <%= film.title %></h1>

<form method="POST" action="/films/update/<%= film.id %>">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" class="form-control" value="<%= film.title %>">
  </div>
  <div class="form-group">
    <label for="tagline">Tagline</label>
    <textarea type="text" name="tagline" class="form-control"><%= film.tagline %></textarea>
  </div>
  <div class="form-group">
    <label for="released">Released year</label>
    <input type="text" name="released" class="form-control" value="<%= film.released %>">
  </div>
  <input type="submit" class="btn btn-primary" value="Submit">
</form>
