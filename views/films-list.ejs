<h1 class="display-4">Films</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Title <small>with <em>tagline</em></small></th>
      <th>Year</th>
      <th>actions</th>
    </tr>
  </thead>

  <tbody>
    <% films.forEach(function(film) {%>
      <tr>
        <td><%= film.id %></td>
        <td>
          <%= film.title %>
          <br><small><em><%= film.tagline %></em></small>
        </td>
        <td><%= film.released %></td>
        <td>
          <form action="/films/delete/<%= film.id %>" method="post" class="d-inline">
            <input type="submit" value="Delete" class="btn btn-danger">
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>

</table>
